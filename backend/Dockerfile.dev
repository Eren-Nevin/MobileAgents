# Backend Development Dockerfile with hot reloading
FROM python:3.12-slim

WORKDIR /app

# Install tmux and curl (for healthcheck)
RUN apt-get update && apt-get install -y --no-install-recommends \
    tmux \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code (will be overridden by volume mount)
COPY app/ ./app/

# Expose port (default 8000, can be overridden)
EXPOSE ${PORT:-8000}

# Run with --reload for hot reloading
# Port is configurable via environment variable
CMD uvicorn app.main:app --host 0.0.0.0 --port ${MATE_PORT:-8000} --reload
