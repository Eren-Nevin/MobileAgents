# Mate Backend Configuration
# Copy this file to .env and modify as needed

# Server settings
MATE_HOST=0.0.0.0
MATE_PORT=8000
MATE_DEBUG=false

# CORS origins (comma-separated)
MATE_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Observer settings
MATE_POLL_INTERVAL=1.0
MATE_DISCOVERY_INTERVAL=5.0
MATE_CAPTURE_LINES=500

# Optional: tmux socket path (for non-default tmux servers)
# MATE_TMUX_SOCKET=/tmp/tmux-1000/default
